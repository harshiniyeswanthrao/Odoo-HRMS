        <field name="name">Update Auction Status</field>
        <field name="model_id" ref="model_new_auction"/>
        <field name="state">code</field>
        <field name="code">model.auto_update_status()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
