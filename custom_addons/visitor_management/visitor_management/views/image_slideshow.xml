<odoo>
    <template id="custom_slideshow_template" name="Custom Slideshow Page">
        <t t-call-assets="web.assets_frontend" />
        <div class="container mt-5">
            <h2 class="text-center mb-4"> Slideshow</h2>
            <div id="customSlideshow" class="slideshow-container">
                <div class="slide active">
                    <img src="https://via.placeholder.com/800x400?text=Image+1" alt="Image 1"/>
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/800x400?text=Image+2" alt="Image 2"/>
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/800x400?text=Image+3" alt="Image 3"/>
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/800x400?text=Image+4" alt="Image 4"/>
                </div>
                <div class="slide">
                    <img src="https://via.placeholder.com/800x400?text=Image+5" alt="Image 5"/>
                </div>

                <!-- Left Arrow -->
                <a id="prevButton" class="arrow left">&#10094;</a>
                <!-- Right Arrow -->
                <a id="nextButton" class="arrow right">&#10095;</a>
            </div>
        </div>
    </template>
</odoo>
