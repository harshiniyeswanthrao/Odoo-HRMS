<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <template id="register_template" name="Visitor Registration">
    <form action="/visitor/register/submit" method="post">
        <input type="hidden" name="station_id" t-att-value="station.id"/>
        <label for="name">Name:</label>
        <input type="text" name="name" required="1"/>
        <label for="email">Email:</label>
        <input type="email" name="email"/>
        <label for="phone">Phone:</label>
        <input type="text" name="phone"/>
        <button type="submit">Register</button>
    </form>
</template>

<template id="thank_you_template" name="Thank You">
    <h3>Thank you for registering!</h3>
</template>

</odoo>